<%= provide(:title, "EditPassword") %>
<%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
<%= f.hidden_field_tag :email, @user.email %>
<%= f.label :Password, class: 'label label-warning stl mrg' %>
<%= f.password_field :password, class: 'form-control flt mrg' %>
<%= f.label :Confirm, class: 'label label-warning stl mrg' %>
<%= f.password_field :password_confirmation, class: 'form-control flt mrg' %>
<%= f.submit :ResetIt, class: 'btn btn-warning stl mrg' %>
<% end %>
