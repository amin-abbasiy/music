<%= provide(:title, "Login") %>

<div id="LoginForm">
<div class="container">
 <h1 class="form-heading">login Form</h1>
 <div class="login-form">
  <div class="main-div">
   <div class="panel">
   <h2>Admin Login</h2>
   <p class=""><%= flash[:danger] %></p>
   <p>Please enter your email and password</p>
   </div>
   <% #url cant be in html: {} doesnt run create method in REST Art %>
    <%= form_for(:session, url: login_path, html: {class: 'Login'}) do |f| %>
       <div class="form-group">
          <%= f.text_field :name, class: 'form-control', id: "inputEmail", placeholder:  'Username Or Email Address' %>
       </div>
       <div class="form-group">
          <%= f.password_field :password, class: 'form-control', id: "inputPassword", placeholder:  'Password' %>
       </div>
         <div class="forgot">
         <%= link_to "Forgot Password?", new_password_reset_path, class: 'label label-warning' %>
       </div>
       <div><%= f.check_box :remember_form %>RememberMe</div>
       <%= f.submit "Login Music", class: 'btn btn-info' %>
     <% end %>
    </div>
   </div>
  </div>
 </div>
